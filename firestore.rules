
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Waitlist can be written to by anyone, but only read by the admin.
    match /waitlist/{waitlistId} {
      allow create: if true;
      allow read: if request.auth != null && request.auth.token.email == 'phaniksrm@gmail.com';
    }

    // Users can only CUD their own plants. They can only list plants that are their own.
    match /plants/{plantId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Users can only CUD their own equipment. They can only list equipment that is their own.
    match /equipment/{equipmentId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
